extends pug/layout.pug

block variables
  -
    const page = 'Каталог'
    const pageTitle = 'Maroon: Каталог косметики'

block content
  +header(page)
  +main('main--catalog main-catalog')
    +pageTitle(pageTitle)
    +catalogPreview
    +cardsList
    +offersSlider('main-catalog__recently-viewed', 'Вы недавно смотрели')
    +subscription
    +contacts
  +footer(page)
